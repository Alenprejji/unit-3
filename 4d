#include <stdio.h>
#include <stdlib.h> // Required for malloc() and free()

int main() {
    int n, i, *ptr, sum = 0;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    // Allocate memory for 'n' integers dynamically
    ptr = (int*) malloc(n * sizeof(int));

    // Check if memory allocation was successful
    if (ptr == NULL) {
        printf("Error! Memory not allocated.\\n");
        return 1; // Exit program with error status
    }

    printf("Enter elements: ");
    for (i = 0; i < n; ++i) {
        // Access allocated memory using pointer arithmetic or array notation
        scanf("%d", ptr + i);
        sum += *(ptr + i);
    }

    printf("Sum = %d\\n", sum);

    // Deallocate the dynamically allocated memory
    free(ptr);
    ptr = NULL; // Good practice to set pointer to NULL to avoid dangling pointer issues

    return 0;
}
