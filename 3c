#include <stdio.h>
#include <string.h>

// Define a structure named 'Student'
struct Student {
    int id;
    float gpa;
    char name[50];
};

int main() {
    // Declare and initialize a structure variable
    struct Student s1;
    s1.id = 101;
    s1.gpa = 3.8;
    strcpy(s1.name, "Alice");

    // Declare a pointer to a structure of type 'Student'
    struct Student *ptr_s1;

    // Assign the address of the structure variable s1 to the pointer
    ptr_s1 = &s1;

    // Access structure members using the arrow (->) operator via the pointer
    printf("Accessing members using the arrow (->) operator:\n");
    printf("ID: %d\n", ptr_s1->id);
    printf("GPA: %.1f\n", ptr_s1->gpa);
    printf("Name: %s\n", ptr_s1->name);

    // Alternatively, you can use the dereference (*) and dot (.) operators,
    // but the arrow operator is the preferred method for readability.
    printf("\nAccessing members using dereference and dot operators:\n");
    printf("ID: %d\n", (*ptr_s1).id);
    printf("GPA: %.1f\n", (*ptr_s1).gpa);
    printf("Name: %s\n", (*ptr_s1).name);

    return 0;
}
